@model IEnumerable<EmployeeModel>

<a asp-action="Create" class="btn btn-primary">Create</a>
<br/>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Дата рождения</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <th>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="text-danger">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </th>
                    <th>@employee.Id</th>
                    <th>
                        <a asp-action="Details" asp-route-id="@employee.Id">@employee.LastName</a>
                    </th>
                    <th>@employee.FirstName</th>
                    <th>@employee.Patronymic</th>
                    <th>@employee.Birthday.ToString("yyyy-dd-MM")</th>
                    <th>
                        <a asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa fa-user-edit"> </i>
                        </a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Данные о сотрудниках отсутствуют</p>
}

